<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:example="http://schemas.android.com/apk/res-auto"
     android:id="@+id/guest_form"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mergedbackground"
    android:screenOrientation="portrait"
    tools:context="com.gbrf.GuestOfHonourActivity" >
 <ProgressBar
        android:id="@+id/guest_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Guests of Honour"
        android:textColor="#B9A171"
        android:textSize="18sp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/farmaanmove"
     android:layout_marginTop="140dp"
    android:orientation="vertical">
<com.lib.VerticalMarqueeTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         example:marqueeSpeed="25"
        android:layout_marginLeft="5dp"
         example:textColor="@android:color/white"
        android:textSize="16sp" />
</LinearLayout>
<TextView
                android:id="@+id/global"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/farmaanmove"
                android:layout_marginTop="10dp"
                android:text="Global"
                android:layout_marginLeft="130dp"
                android:textColor="#B9A171"
                android:textSize="16dp"
                android:textStyle="bold" />

                  <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/farmaanmove"
                android:layout_marginTop="10dp"
                android:id="@+id/regional"
                 android:layout_marginLeft="5dp"
                android:text="Regional"
                   android:layout_toRightOf="@+id/global"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16dp"/>
    

