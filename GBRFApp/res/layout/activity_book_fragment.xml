<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backinner"
    tools:context="com.gbrf.BookFragment" >
 <ScrollView
       android:layout_width="match_parent"
    android:layout_height="wrap_content"
         android:layout_centerInParent="true"
        android:id="@+id/scrollView">

        <LinearLayout
             android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     android:layout_centerInParent="true"
            android:id="@+id/layout2">
    
    <RelativeLayout
        android:id="@+id/img_slideshow_layout"
         android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                   android:gravity="center" >

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="fill_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/img_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_pager"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:paddingTop="2dp"
            android:textColor="#FFFFFF" />
          <TextView
            android:id="@+id/pricestring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_name"
            android:text="@string/price"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:paddingTop="2dp"
            android:textColor="#FFFFFF" />
         <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_name"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/pricestring"
            android:layout_gravity="center"
            android:paddingTop="2dp"
            android:textColor="#FFFFFF" />

        <com.gbrf.util.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pricestring"
            android:padding="7dip" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/img_info_layout"
           android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                   android:gravity="center"
        android:layout_below="@+id/img_slideshow_layout"
        android:background="@drawable/storebg" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:text="Also available on"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textView2"

              android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/imageView3"
            android:background="@drawable/storebgblue"
            android:text="Amazon Kindle >"
             android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF" />
           <Button
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
 
            android:layout_below="@+id/textView3"
             android:layout_marginTop="5dp"

             android:layout_gravity="center"
            android:layout_toLeftOf="@+id/imageView3"
            android:background="@drawable/storebgblue"
            android:text="Google Play Books >"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF" />
             <Button
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textView4"
             android:layout_gravity="center"
             android:layout_marginTop="5dp"
            android:background="@drawable/iconbgblue"
            android:text="iBooks >"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF" />
             
                <Button
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textView4"
             android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
               android:layout_gravity="center"
            android:layout_toLeftOf="@+id/imageView3"
               android:layout_toRightOf="@+id/textView5"
            android:background="@drawable/iconbgblue"
            android:text="Nook >"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF" />
                
                 <Button
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
       android:layout_gravity="center"
            android:layout_below="@+id/textView5"
             android:layout_marginTop="5dp"
            android:background="@drawable/iconbgblue"
            android:text="Kobo >"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF" />
                 
                   <Button
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textView5"
             android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_toLeftOf="@+id/imageView3"
               android:layout_toRightOf="@+id/textView7"
            android:background="@drawable/iconbgblue"
                android:layout_gravity="center"
            android:text="Lulu >"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF" />
                     <Button
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView7"
             android:layout_marginTop="5dp"
           android:background="@drawable/iconbgblue"
                android:layout_gravity="center"
            android:text="Flipkart >"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF" />
                     
                      <Button
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/textView7"
             android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_toLeftOf="@+id/imageView3"
               android:layout_toRightOf="@+id/textView9"
  android:background="@drawable/iconbgblue"
                android:layout_gravity="center"
            android:text="Paytm >"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF" />
             
            
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
 android:layout_toRightOf="@id/textView2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/finalbookcover"/>
    </RelativeLayout>
</LinearLayout>
</ScrollView>
</RelativeLayout>
