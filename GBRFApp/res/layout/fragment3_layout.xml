<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:id="@+id/frame_contain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_screen1">
      <ProgressBar
        android:id="@+id/invitation_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
    <ScrollView
     android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_centerInParent="true"
        android:id="@+id/registration_form">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
         android:layout_centerInParent="true"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KINDLY ACCEPT OUR INVITATION"
                android:id="@+id/AcceptInvitation"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&amp;"
                android:id="@+id/and"
                android:textColor="#FFFFFF"
                android:textSize="22dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/and"
                android:textAlignment="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create "
                    android:id="@+id/create"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/history"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="History"
                    android:textColor="#FFFFFF"
                    android:textSize="22dp" />


            </LinearLayout>
 <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                   android:gravity="center"
 >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:id="@+id/Invitation"
                android:layout_gravity="center"
                android:textAllCaps="false"
                android:layout_marginTop="40dp"
                android:background="@drawable/buttonblue"
                android:text="I Accept"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20dp"/>

</RelativeLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>