<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fffff78e"
    tools:context=".InvitationActivity">

      <ProgressBar
        android:id="@+id/registration_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerInParent="true"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registration_form">

         <RelativeLayout
         android:id="@+id/email_registration_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"> 
          <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="For the First Time in the World"
            android:id="@+id/textView27"
            android:background="#FF4F5C"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:singleLine="true" />
        
                 <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="from the Indian Soil"
            android:id="@+id/textView28"
            android:layout_below="@+id/textView27"
            android:background="#FF4F5C"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:singleLine="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="You all are cordially invited as"
            android:textColor="#ff292929"
            android:id="@+id/textView29"
            android:gravity="center"
            android:layout_below="@+id/textView28"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Guests of Honour"
            android:textColor="#A42D31"
            android:id="@+id/textView30"
            android:gravity="center"
            android:layout_below="@+id/textView29"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="to release the book"
            android:textColor="#ff292929"
            android:id="@+id/textView31"
            android:gravity="center"
            android:layout_below="@+id/textView30"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Creative Politics Creative India Creative Youth in a Global Perspective"
            android:textColor="#A42D31"
            android:id="@+id/textView32"
            android:gravity="center"
            android:layout_below="@+id/textView31"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="22dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="By S Kaul"
            android:textColor="#ff292929"
            android:id="@+id/textView33"
            android:gravity="center"
            android:layout_below="@+id/textView32"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Being Released in August"
            android:textColor="#0D50A1"
            android:id="@+id/textView34"
            android:layout_below="@+id/textView33"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="WWW.globalbookreleaseforum.com"
            android:textColor="#A42D31"
            android:id="@+id/textView35"
            android:layout_below="@+id/textView34"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kindly e-grace the occasion and be a part of this inspirational moment, leave a signature of your participation and be our partner in creating History!"
            android:id="@+id/textView36"
            android:layout_marginTop="2dp"
            android:textColor="#0D50A1"
            android:layout_below="@+id/textView35"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="15dp" />
             
             
        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:ems="10"
            android:id="@+id/name"
            android:layout_below="@+id/textView36"
            android:layout_centerHorizontal="true" />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Email-Id"
            android:id="@+id/email"
            android:layout_below="@+id/name"
            android:layout_centerHorizontal="true" />

        <AutoCompleteTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:hint="Mobile"
            android:id="@+id/mobileno"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Accept Invitation"
            android:background="#22B473"
            android:id="@+id/email_submit_button"
            android:layout_below="@+id/mobileno"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"/>

                 </RelativeLayout>
  </ScrollView>
</RelativeLayout>
